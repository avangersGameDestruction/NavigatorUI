<Window x:Class="NavigatorUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NavigatorUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        ResizeMode="NoResize"
        Topmost="True"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- background color -->
        <Grid Background="Black">
            <!-- navigation panel -->
            <Grid x:Name="navpanel" HorizontalAlignment="Left" Width="65" Background="Gray">
                <StackPanel x:Name="stackpnl">
                    <!-- Menu Toggle Button -->
                    <Grid Height="90">
                        <!-- Toggle Button -->
                        <ToggleButton x:Name="togglebtn" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="18, -20, 0, 0" Height="30" Width="30" BorderThickness="0">
                            
                        </ToggleButton>
                    </Grid>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
